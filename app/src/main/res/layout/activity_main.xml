<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.lg.wheelviewdemo.MainActivity">

    <TextView
        android:id="@+id/tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:textColor="@color/colorPrimary"
        android:textSize="30sp"
        android:layout_marginTop="100dp"/>

    <com.lg.wheelviewdemo.PickerView
        android:id="@+id/pickerview"
        android:background="@drawable/more_content_nor"
        android:layout_width="130dp"
        android:layout_height="150dp" />

    <com.lg.wheelviewdemo.PickerView
        android:id="@+id/pickerview2"
        android:background="@drawable/more_content_nor"
        android:layout_toRightOf="@id/pickerview"
        android:layout_width="130dp"
        android:layout_height="150dp" />


    <Button
        android:onClick="onClick"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@color/colorPrimary"
        android:padding="10dp"
        android:text="点我"
        android:textColor="@android:color/white"
        android:textSize="20sp"
        android:textStyle="bold"
        android:layout_below="@+id/pickerview"
        android:layout_alignParentStart="true"
        android:layout_marginTop="26dp"
        android:id="@+id/button" />


</RelativeLayout>
